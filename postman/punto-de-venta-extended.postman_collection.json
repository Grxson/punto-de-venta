  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const j = pm.response.json();",
                  "  pm.environment.set('token', j.token);",
                  "  pm.environment.set('usuarioId', j.usuario.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}" },
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api","auth","login"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar productos",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{base_url}}/api/inventario/productos", "host": ["{{base_url}}"], "path": ["api","inventario","productos"] } },
          "response": []
        },
        {
          "name": "Productos activos",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{base_url}}/api/inventario/productos/activos", "host": ["{{base_url}}"], "path": ["api","inventario","productos","activos"] } },
          "response": []
        },
        {
          "name": "Crear producto",
          "event": [
            { "listen": "test", "script": { "exec": ["if (pm.response.code === 201){ const d=pm.response.json(); pm.environment.set('productoId', d.id);}"], "type": "text/javascript" } }
          ],
          "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Tostada\",\n  \"precio\": 25.00,\n  \"categoriaId\": 1,\n  \"disponibleEnMenu\": true\n}" }, "url": { "raw": "{{base_url}}/api/inventario/productos", "host": ["{{base_url}}"], "path": ["api","inventario","productos"] } },
          "response": []
        }
      ]
    },
    {
      "name": "Categorías",
