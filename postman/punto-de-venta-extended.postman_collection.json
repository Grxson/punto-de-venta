          "response": []
        },
        {
          "name": "Crear categoría",
          "event": [ { "listen": "test", "script": { "exec": ["if (pm.response.code === 201){ const d=pm.response.json(); pm.environment.set('categoriaProductoId', d.id);}"], "type": "text/javascript" } } ],
          "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Bebidas\",\n  \"descripcion\": \"Categoria bebidas\"\n}" }, "url": { "raw": "{{base_url}}/api/inventario/categorias-productos", "host": ["{{base_url}}"], "path": ["api","inventario","categorias-productos"] } },
          "response": []
        }
      ]
    },
    {
      "name": "Movimientos",
      "item": [
        {
          "name": "Crear ingreso",
          "event": [ { "listen": "test", "script": { "exec": ["if(pm.response.code===201){const d=pm.response.json(); pm.environment.set('movimientoId', d.id);}"], "type": "text/javascript" } } ],
          "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"ingredienteId\": 1,\n  \"cantidad\": 1000,\n  \"unidadId\": 1,\n  \"costoUnitario\": 0.025,\n  \"tipo\": \"INGRESO\"\n}" }, "url": { "raw": "{{base_url}}/api/inventario/movimientos", "host": ["{{base_url}}"], "path": ["api","inventario","movimientos"] } },
          "response": []
        },
        {
          "name": "Movimientos por ingrediente",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{base_url}}/api/inventario/movimientos/ingrediente/{{ingredienteId}}", "host": ["{{base_url}}"], "path": ["api","inventario","movimientos","ingrediente","{{ingredienteId}}"] } },
          "response": []
